{
  "extends": ["sbs", "sbs/typescript"],
  "rules": {
    "no-console": "off",
    "no-restricted-imports": [
      "error",
      {
        "patterns": [
          "@material-ui/*/*",
          "!@material-ui/core/styles",
          "!@material-ui/core/test-utils/*"
        ]
      }
    ]
  },
  "overrides": [
    {
      "files": ["**.stories.tsx"],
      "rules": {
        "react/function-component-definition": "off"
      }
    }
  ],
  "settings": {
    "polyfills": ["AbortController", "navigator.mediaDevices"]
  }
}
