{
  "name": "@amfa-team/picnic-sfu",
  "version": "0.0.0-development",
  "main": "index.js",
  "repository": "https://github.com/amfa-team/picnic-sfu.git",
  "license": "SEE LICENSE IN LICENSE.md",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^3.7.0",
    "@typescript-eslint/parser": "^3.5.0",
    "eslint": "^7.4.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-standard-with-typescript": "^18.0.2",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "4",
    "eslint-plugin-react": "^7.20.3",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5",
    "typescript": "^3.9.6",
    "semantic-release": "^17.1.1"
  },
  "scripts": {
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "build": "(cd packages/server; yarn build) && (cd packages/client; yarn build)",
    "prettier": "prettier --write .",
    "api:start:db": "cd packages/api; yarn dynamo:start",
    "api:start": "cd packages/api; yarn start",
    "server:start": "cd packages/server; yarn start:dev",
    "server:build": "cd packages/server; yarn build",
    "client:start": "cd packages/client; yarn start",
    "all": "ttab yarn api:start:db; ttab yarn api:start; ttab yarn server:start; ttab yarn client:start;",
    "semantic-release": "semantic-release"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint --cache --fix",
    "*.{js,css,md}": "prettier --write"
  },
  "optionalDependencies": {
    "ttab": "^0.6.1"
  },
  "publishConfig": {
    "access": "restricted"
  }
}
