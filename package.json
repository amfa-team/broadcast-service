{
  "name": "@amfa-team/picnic-sfu",
  "version": "0.0.0-development",
  "main": "index.js",
  "repository": "https://github.com/amfa-team/picnic-sfu.git",
  "license": "SEE LICENSE IN LICENSE.md",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": "^12.10.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@typescript-eslint/eslint-plugin": "^4.6.0",
    "@typescript-eslint/parser": "^4.6.0",
    "eslint": "^7.12.1",
    "eslint-config-prettier": "^6.14.0",
    "eslint-config-sbs": "^1.0.0",
    "eslint-import-resolver-workspaces": "^1.0.11",
    "eslint-plugin-compat": "^3.8.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^4.3.0",
    "lint-staged": "^10.5.0",
    "prettier": "^2.1.2",
    "stylelint": "^13.7.2",
    "stylelint-config-recommended": "^3.0.0",
    "stylelint-css-modules": "^1.2.0-globals",
    "stylelint-declaration-block-no-ignored-properties": "^2.3.0",
    "stylelint-no-unsupported-browser-features": "^4.1.3",
    "tslib": "^2.0.3",
    "typescript": "^4.0.5"
  },
  "scripts": {
    "lint": "eslint --cache . --ext .js,.jsx,.ts,.tsx .",
    "lint:style": "stylelint '**/*.css'",
    "prettier:fix": "prettier --write .",
    "prettier:check": "prettier --check .",
    "build": "(cd packages/react; yarn build) && yarn workspaces run build",
    "clean": "yarn workspaces run clean",
    "start": "ttab yarn -t 'React' start:react; ttab yarn -t 'API' start:api; ttab -t 'Example' \"sleep 3 && yarn start:example\"; ttab -t 'Server' yarn start:server; ttab -t 'Dynamo' yarn start:dynamo",
    "start:api": "cd packages/api && yarn start",
    "start:dynamo": "cd packages/api && yarn dynamo:start",
    "start:server": "cd packages/server && yarn start:dev",
    "start:react": "cd packages/react && yarn start",
    "start:example": "cd packages/example && yarn start"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "[[ -n $HUSKY_BYPASS ]] || commitlint --config ./config/commitlint.config.js -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,css,md,json,html}": "prettier --write",
    "*.{css}": "stylelint",
    "*.{js,jsx,ts,tsx}": "eslint --cache ."
  },
  "optionalDependencies": {
    "ttab": "^0.7.0"
  }
}
