{
  "name": "@amfa-team/picnic-sfu",
  "version": "0.0.0-development",
  "main": "index.js",
  "repository": "https://github.com/amfa-team/picnic-sfu.git",
  "license": "SEE LICENSE IN LICENSE.md",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@commitlint/cli": "^9.1.2",
    "@commitlint/config-conventional": "^9.1.2",
    "@typescript-eslint/eslint-plugin": "^3.10.1",
    "@typescript-eslint/parser": "^3.10.1",
    "eslint": "^7.7.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-standard-with-typescript": "^18.0.2",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.20.6",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.13",
    "prettier": "^2.1.1",
    "semantic-release": "^17.1.1",
    "typescript": "^4.0.2"
  },
  "scripts": {
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "build": "(cd packages/server; yarn build) && (cd packages/client; yarn build)",
    "prettier": "prettier --write .",
    "api:start:db": "cd packages/api; yarn dynamo:start",
    "api:start": "cd packages/api; yarn start",
    "server:start": "cd packages/server; yarn start:dev",
    "server:build": "cd packages/server; yarn build",
    "client:start": "cd packages/client; yarn start",
    "all": "ttab yarn api:start:db; ttab yarn api:start; ttab yarn server:start; ttab yarn client:start;",
    "semantic-release": "semantic-release"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "[[ -n $HUSKY_BYPASS ]] || commitlint --config ./config/commitlint.config.js -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint --cache --fix",
    "*.{js,css,md}": "prettier --write"
  },
  "optionalDependencies": {
    "ttab": "^0.7.0"
  },
  "publishConfig": {
    "access": "restricted"
  }
}