{
  "name": "broadcast-service",
  "repository": "https://github.com/amfa-team/broadcast-service.git",
  "version": "0.0.0-development",
  "main": "index.js",
  "license": "SEE LICENSE IN LICENSE.md",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": "^12.10.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "multi-semantic-release": "^2.6.0",
    "@typescript-eslint/eslint-plugin": "^4.15.0",
    "@typescript-eslint/parser": "^4.15.0",
    "eslint": "^7.20.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-config-sbs": "^1.0.1",
    "eslint-import-resolver-workspaces": "^1.0.11",
    "eslint-plugin-compat": "^3.9.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "stylelint": "^13.10.0",
    "stylelint-config-css-modules": "^2.2.0",
    "stylelint-config-recommended": "^3.0.0",
    "stylelint-css-modules": "^1.2.0-globals",
    "stylelint-declaration-block-no-ignored-properties": "^2.3.0",
    "stylelint-no-unsupported-browser-features": "^4.1.4",
    "tslib": "^2.1.0",
    "typescript": "^4.1.5"
  },
  "optionalDependencies": {
    "ttab": "^0.7.0"
  },
  "scripts": {
    "lint": "eslint --cache . --ext .js,.jsx,.ts,.tsx .",
    "lint:style": "stylelint '**/*.css'",
    "prettier:fix": "prettier --write .",
    "prettier:check": "prettier --check .",
    "build": "(cd packages/react; yarn build) && yarn workspaces run build",
    "clean": "yarn workspaces run clean",
    "start": "ttab -t 'React' yarn start:react; ttab -t 'API' yarn start:api; ttab -t 'Example' \"sleep 3 && yarn start:example\"; ttab -t 'Server' yarn start:server;",
    "start:api": "cd packages/api && yarn start",
    "start:server": "cd packages/server && yarn start:dev",
    "start:react": "cd packages/react && yarn start",
    "start:example": "cd packages/example && yarn start",
    "npm:release": "multi-semantic-release --deps.bump=inherit",
    "npm:release:local": "CI=true LOCAL_RELEASE=true multi-semantic-release --deps.bump=inherit"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "[[ -n $HUSKY_BYPASS ]] || commitlint --config ./config/commitlint.config.js -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --cache .",
      "prettier --write"
    ],
    "*.{css}": "stylelint",
    "*.{css,md,json,html}": "prettier --write"
  }
}
